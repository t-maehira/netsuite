<%= form_for(@orderLog, :url => {:controller => :approve, :action => :update}) do |f| %>
  <%= content_tag(:h1, @recordList[@orderLog.record_type]['title'] + ' 承諾画面') %>
  <%= content_tag(:p, @recordList[@orderLog.record_type]['text'] + '番号 : ' + @orderLog.tranid, :class => 'numbers') %>
  <%= hidden_field :order_log, :id, :value => @orderLog.id%>
  <div id="button_wrapper">
    <%= f.submit "承諾", :name => 'accept' %>
    <%= f.submit "拒否", :name => 'reject' %>
  </div>
<% end %>

<%= render :partial => 'shared/disclaimers' %>
